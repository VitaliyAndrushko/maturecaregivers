                            .span.icon-bar
                            .span.icon-bar
                            .span.icon-bar
                        a.navbar-brand(href='#') Maturecaregivers
                    #navbar.collapse.navbar-collapse
                        ul.nav.navbar-nav.navbar-right
                            li(class=(title === 'Home' ? 'active' : ''))
                                a(href='/') Home
                            li(class=(title === 'About' ? 'active' : ''))
                                a(href='/about') About
                            li(class=(title === 'Services' ? 'active' : ''))
                                a(href='/contact') Services
                            li(class=(title === 'Testimonials' ? 'active' : ''))
                                a(href='/contact') Testimonials
                            li(class=(title === 'Contact' ? 'active' : ''))
                                a(href='/contact') Contact Us
                            li(class=(title === 'Faq' ? 'active' : ''))
                                a(href='/contact') FAQ'S
